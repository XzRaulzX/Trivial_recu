<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione la categoria"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="216dp"
        android:layout_height="279dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/deporte"
                android:layout_width="108dp"
                android:layout_height="144dp"
                android:onClick="deporte"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/deporte" />

            <ImageButton
                android:id="@+id/geografia"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:onClick="geografia"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/geografia" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="151dp">

            <ImageButton
                android:id="@+id/entretenimiento"
                android:layout_width="103dp"
                android:layout_height="142dp"
                android:onClick="entretenimiento"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/entretenimiento" />

            <ImageButton
                android:id="@+id/arte"
                android:layout_width="103dp"
                android:layout_height="142dp"
                android:onClick="arte"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/arte" />
        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/coronaid"
        android:layout_width="97dp"
        android:layout_height="111dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.294"
        app:srcCompat="@drawable/interrogacion" />

    <ImageView
        android:id="@+id/vidas"
        android:layout_width="111dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/corazoncompleto"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="89dp" />

</androidx.constraintlayout.widget.ConstraintLayout>